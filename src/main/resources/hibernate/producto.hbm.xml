<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.figaro.model.Producto"  table="PRODUCTO">
		<id name="id" type="int" column="ID_PRODUCTO" >
			<generator class="increment"/>
		</id>		
	 	<property name="nombre" 		column="NOMBRE" 		 type="string"/>
	 	<property name="descripcion"	column="DESCRIPCION"	 type= "string"/>
	 	<property name="cantidad" 		column="CANTIDAD" 		 type="int"/> 	
	    <property name="cantidadMinima" column="CANTIDAD_MINIMA" type="int"/> 
		<property name="precio"  		column="PRECIO"   		 type="big_decimal"/>
	</class>
</hibernate-mapping>
