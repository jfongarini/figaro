<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.figaro.model.Movimiento" table="MOVIMIENTO">
		
		<id name="id" type="int" column="ID_MOVIMIENTO" >
			<generator class="increment"/>
		</id>
	 	<property name="precio"  		column="PRECIO"   	type="big_decimal"/>
	 	<property name="fecha"		 	column="FECHA"    	type="date"/>
	 	<property name="detalle" 		column="DETALLE"  	type="string"/>
	 	<property name="categoria" 		column="CATEGORIA"  	type="string"/>	 	
	 	<property name="isGasto" 		column="ISGASTO"  	type="boolean"/>
	 	<property name="tipoPago" 		column="TIPOPAGO"  	type="string"/>
	 	<property name="cuotas" 		column="CUOTAS"  	type="int"/>
	 	<property name="descuento" 		column="DESCUENTO"  type="big_decimal"/>	 	 
	 	
     	
	</class>
</hibernate-mapping>
