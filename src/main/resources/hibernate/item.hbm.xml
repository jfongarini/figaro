<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.figaro.model.Item"  table="ITEM">
		<id name="id" type="int" column="ID_ITEM" >
			<generator class="increment"/>
		</id>
		<property name="nombreProducto" 		column="NOMBREPRODUCTO" 		type="string"/>		
		<property name="descripcionProducto" 	column="DESCRIPCIONPRODUCTO" 	type="string"/>
		<property name="precioUnitario" 		column="PRECIOUNITARIO" 		type="big_decimal"/>
		<property name="cantidad" 				column="CANTIDAD" 				type="int"/>
		<property name="precioTotal"			column="PRECIOTOTAL" 			type="big_decimal"/>
	</class>
</hibernate-mapping>
